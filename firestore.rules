rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data
    // All access requires Firebase Authentication
    match /users/{userId} {
      // User can read/write their own profile document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User can read/write their own daily logs
      match /logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // User can read/write their own chat messages
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny all other access by default (implicit, but explicit for clarity)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
