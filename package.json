{
  "name": "sammy",
  "version": "0.1.1",
  "description": "AI-based habit companion app",
  "main": "backend/src/index.js",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "npm run install-all && cd frontend && npm run build",
    "lint": "eslint .",
    "start": "node backend/src/index.js",
    "dev": "nodemon backend/src/index.js",
    "dev:local": "node scripts/dev-with-ports.js",
    "dev:local:list": "node scripts/list-instances.js",
    "dev:local:kill": "node scripts/kill-instance.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "validate-env": "node scripts/validate-env.js",
    "version:get": "node scripts/get-version.js",
    "version:bump": "node scripts/bump-version-auto.js",
    "version:bump:interactive": "node scripts/bump-version.js",
    "version:patch": "node scripts/bump-version-auto.js patch",
    "version:minor": "node scripts/bump-version-auto.js minor",
    "version:major": "node scripts/bump-version-auto.js major",
    "postinstall": "echo 'Setup complete! Run npm run dev:local to start development servers.'"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "find-process": "^2.0.0",
    "fkill": "^10.0.1"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "nodemon": "^3.1.4"
  }
}