{
  "name": "sammy",
  "version": "0.11.6",
  "description": "AI-based habit companion app",
  "main": "backend/src/index.js",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "npm run install-all && cd frontend && npm run build",
    "lint": "npm run lint --prefix frontend && npm run lint --prefix backend",
    "start": "node backend/src/index.js",
    "dev": "nodemon backend/src/index.js",
    "dev:local": "node scripts/dev-with-ports.js",
    "dev:local:list": "node scripts/list-instances.js",
    "dev:local:kill": "node scripts/kill-instance.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "android": "cd frontend && npm run android",
    "android:dev": "cd frontend && npm run android:dev",
    "android:local": "cd frontend && npm run android:local",
    "android:local-livereload": "cd frontend && npm run android:local-livereload",
    "apk": "cd frontend && npm run apk",
    "apk:dev": "cd frontend && npm run apk:dev",
    "apk:local": "cd frontend && npm run apk:local",
    "apk:prod": "cd frontend && npm run apk:prod",
    "test:frontend": "cd frontend && npm test",
    "setup:env": "node scripts/setup-env.js",
    "validate-env": "node scripts/validate-env.js",
    "version:get": "node scripts/get-version.js",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:first": "standard-version --first-release",
    "postinstall": "echo 'Setup complete! Run npm run dev:local to start development servers.'",
    "prepare": "husky"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "find-process": "^2.0.0",
    "fkill": "^10.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.4",
    "standard-version": "^9.5.0"
  }
}
